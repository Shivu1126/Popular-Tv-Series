<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:layout_marginStart="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cast_pic_card"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/card_bg"
        android:layout_margin="0dp"
        app:cardCornerRadius="30dp"
        android:elevation="0dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/cast_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@color/card_bg"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/original_name"
        android:layout_below="@id/cast_pic_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Land of Lion"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"/>
    <TextView
        android:id="@+id/character_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/original_name"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/text_blue"
        android:text="2021"
        android:textSize="15sp"
        android:singleLine="true"/>
    <TextView
        android:id="@+id/episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/character_name"
        android:textStyle="bold"
        android:layout_marginTop="1dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/text_blue"
        android:text="(2021 episodes)"
        android:textSize="14sp"
        android:singleLine="true"/>
</RelativeLayout>